{{define "showUser"}}
    <!DOCTYPE html>
    <html lang="en">
    {{template "head"}}
    {{template "bodyTop"}}
    <div class="right_col" role="main">

        <div class="page-title">
            <div class="title_left">
                <h3>Create - User</h3>
            </div>

            <div class="title_right text-right">
                <a href="/user/" class="btn btn-outline-warning"><i class="fa fa-back"></i> Back List</a>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="page-body">
            <form action="/user/store/" method="POST" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 offset-3">
                                <div class="form-group">
                                    <label for="">Username</label>
                                    <input type="text" value="{{.data.nama}}" class="form-control" placeholder="Username" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="">Password</label>
                                    <input type="password" value="{{.data.password}}" class="form-control" placeholder="password" name="password">
                                </div>
                                <div class="form-group">
                                    <p>{{.data.type}}</p>
                                    <label for="typeUser">Type User</label>
                                    <select name="typeUser" id="typeUser" class="form-control" data-placeholder="Type User">
                                        {{range $index , $item := .type}}
                                            {{if eq $item .data.type}}
                                                <option value="{{$item}}" selected>{{$item}}</option>
                                            {{else}}
                                                <option value="{{$item}}">{{$item}}</option>
                                            {{end}}
                                            <option value="{{$item}}">{{$item}}</option>
                                        {{end}}
                                    </select>
                                </div>
                                <div class="form-group text-right">
                                    <a href="/user/list/" class="btn btn-outline-secondary"><i class="fa fa-close"></i> Cancel</a>
                                    <button class="btn btn-outline-primary" type="submit"><i class="fa fa-save"></i> Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
    {{template "footer"}}

    </html>
{{end}}